<Window x:Class="Chapter6.AncestorDescendant"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AncestorDescendant" Height="300" Width="300" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="12,12,12,0" Name="stackPanel1" Height="112" VerticalAlignment="Top">
            <Button Height="23" Name="cmdSave" Width="75">Save</Button>
            <Button Height="23" Name="cmdCancel" Width="75">Cancel</Button>
        </StackPanel>
        <GroupBox Header="groupBox1" Height="65" Margin="18,0,120,49" Name="grpMyData" VerticalAlignment="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16*" />
                    <ColumnDefinition Width="22*" />
                    <ColumnDefinition Width="90*" />
                </Grid.ColumnDefinitions>
                <CheckBox Margin="6,16,2,14" Name="chkCheckMe" Grid.ColumnSpan="3">Check Me</CheckBox>
            </Grid>
        </GroupBox>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,30,91" Name="cmdGetData" VerticalAlignment="Bottom" Width="75">Get Data</Button>
    </Grid>
</Window>
